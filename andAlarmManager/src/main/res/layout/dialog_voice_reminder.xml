<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/iv_bg_dialog_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_dialog_voice_reminder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="你可以这样对我说"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/tv_dialog_reminder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="&#34;明天早上7点叫我起床&#34;\n&#34;提醒我晚上8点做作业&#34;\n&#34;每天晚上9点提醒我吃药&#34;"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2dp"
        android:textSize="10sp" />
    <ImageView
        android:layout_marginBottom="12dp"
        android:id="@+id/iv_dialog_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bg_dialog_reminder"
        android:layout_centerHorizontal="true"></ImageView>

</RelativeLayout>