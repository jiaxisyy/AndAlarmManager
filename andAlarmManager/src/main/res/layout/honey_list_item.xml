<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_honey_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <com.babacit.alarm.ui.view.RoundImageView
            android:id="@+id/riv_honey_portrait"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/portrait_default" />

        <ImageView
            android:id="@+id/iv_honey_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/riv_honey_portrait"
            android:layout_alignRight="@id/riv_honey_portrait"
            android:src="@drawable/icon_online"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_honey_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:gravity="clip_vertical"
        android:maxLength="4"
        android:text="大宝贝"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>