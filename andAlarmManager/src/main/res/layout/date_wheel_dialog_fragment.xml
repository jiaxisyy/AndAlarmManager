<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dlg_white_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dip">

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_year_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical|left"
        android:visibility="gone"
        android:text="年" />

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_month_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginTop="5dip"
        android:visibility="gone"
        android:gravity="center_vertical|left"
        android:text="月" />

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <kankan.wheel.widget.WheelView
        android:id="@+id/wv_date_dlg_day_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginTop="5dip"
        android:visibility="gone"
        android:gravity="center_vertical|left"
        android:text="日" />

</LinearLayout>