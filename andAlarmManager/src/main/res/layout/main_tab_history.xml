<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_tab2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="#EEEEEE"
        android:checkedButton="@+id/rb_finished_history"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_finished_history"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="15sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:background="#AAA" />

        <RadioButton
            android:id="@+id/rb_unfinished_history"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="未完成"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="15sp" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_main_history"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/transparent"
        android:divider="#eee"
        android:dividerHeight="1dip"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@drawable/selector_item"
        android:scrollbars="none" />

</LinearLayout>