<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/rl_eyes_protect_alarm_title"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/btn_eyes_protect_alarm_back"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/selector_back" />

        <TextView
            style="@style/txt_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="眼保健操" />

        <TextView
            android:id="@+id/tv_eyes_protect_alarm_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="保存"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_eyes_protect_alarm_title"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_eyes_protect_alarm_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_eye_protect_first_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第一次"
                        android:textColor="#666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_eyes_protect_first_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="10:30"
                        android:textSize="24sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/seperator" />

                <LinearLayout
                    android:id="@+id/ll_eye_protect_second_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第二次"
                        android:textColor="#666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_eyes_protect_second_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="15:30"
                        android:textSize="24sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/seperator" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_label"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="闹钟标题"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_alarm_label_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_expand" />

                <TextView
                    android:id="@+id/tv_eyes_protect_alarm_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_alarm_label_expand"
                    android:text="眼保健操"
                    android:textColor="#929292"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_circle"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="周期"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_alarm_circle_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_expand" />

                <TextView
                    android:id="@+id/tv_eyes_protect_alarm_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_alarm_circle_expand"
                    android:text="仅一次"
                    android:textColor="#929292"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_date"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="日期"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_alarm_date_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_expand" />

                <TextView
                    android:id="@+id/tv_eyes_protect_alarm_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_alarm_date_expand"
                    android:text="2015-10-22"
                    android:textColor="#929292"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_early_time"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="提前时间"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_alarm_early_time_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_expand" />

                <TextView
                    android:id="@+id/tv_eyes_protect_alarm_early_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_alarm_early_time_expand"
                    android:text="不提前"
                    android:textColor="#929292"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_ring"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="提醒声音"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_record_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/selector_round_text_bg"
                    android:padding="4dip"
                    android:text="录制提醒"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_choose_ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@id/btn_record_voice"
                    android:background="@drawable/selector_round_text_bg"
                    android:padding="4dip"
                    android:text="选择提示音"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_confirm"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="提醒确认"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sb_remind_confirm"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:offColor="#aaa"
                    app:onColor="#FF8F3D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/sb_remind_confirm"
                    android:text="开启后,需要终端确认提醒结果"
                    android:textColor="#FE913F"
                    android:textSize="10sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />

            <RelativeLayout
                android:id="@+id/rl_eyes_protect_alarm_remark"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/selector_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="备注"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_alarm_remark_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_expand" />

                <TextView
                    android:id="@+id/tv_eyes_protect_alarm_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_alarm_remark_expand"
                    android:text="无"
                    android:textColor="#929292"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="@color/seperator" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>